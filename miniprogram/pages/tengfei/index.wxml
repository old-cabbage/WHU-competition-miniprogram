<view class="container">
  <movable-area class="movable-area" scale-area>
    <movable-view
      class="movable-view"
      direction="all"
      scale
      bindscale="onScale"
      bindchange="onChange"
      x="{{x}}"
      y="{{y}}"
      scale="{{scale}}"
      damping="100"
      friction="100"
      scale-min="1"
      scale-max="5">
      <!-- SVG图片显示区域 -->
      <view class="svg-container">
        <!-- 使用image标签直接显示SVG -->
        <image
          src="https://challonge.com/zh_CN/2025tengfeibei.svg"
          mode="widthFix"
          style="width: 100%; height: auto;"
        />
      </view>
    </movable-view>
  </movable-area>

  <!-- 标题文字 -->
  <view class="title">
    <text>为你支持的球队投票</text>
  </view>

  <!-- 比赛列表区域 -->
  <view class="match-list">
    <block wx:for="{{matches}}" wx:key="matchId">
      <view class="match-item">
        <view class="match-info">
          <text>{{item.displayTime}} - {{item.location}}</text>
        </view>
        <view class="teams">
          <text>{{item.teamA}}</text>
          <text> VS </text>
          <text>{{item.teamB}}</text>
        </view>

        <!-- 比赛性质显示区域 -->
        <view class="match-type" wx:if="{{item.matchType}}">
          <text>{{item.matchType}}</text>
        </view>

        <!-- 已投票信息显示区域 -->
        <view class="voted-info" wx:if="{{item.hasVoted}}">
          <text>您已投给 </text><text class="voted-team-name">{{item.voteFor === 'teamA' ? item.teamA : item.teamB}}</text>
        </view>

        <view class="vote-section">
          <button
            class="vote-button {{!item.votingOpen || item.hasVoted ? 'disabled-button' : ''}}"
            data-matchid="{{item.matchId}}"
            data-team="teamA"
            bindtap="vote"
          >
            {{item.teamA}}
          </button>
          <button
            class="vote-button {{!item.votingOpen || item.hasVoted ? 'disabled-button' : ''}}"
            data-matchid="{{item.matchId}}"
            data-team="teamB"
            bindtap="vote"
          >
            {{item.teamB}}
          </button>
        </view>
        <!-- 投票人数显示区域 -->
        <view class="vote-counts" wx:if="{{!item.votingOpen || item.hasVoted}}">
          <text>{{item.teamA}} 支持数: {{item.teamAVotes}}</text>
          <text>{{item.teamB}} 支持数: {{item.teamBVotes}}</text>
        </view>

      </view>
    </block>
  </view>

</view>